# Auto detect text files and perform LF normalization
* text=auto

# Swift files
*.swift text eol=lf

# Documentation files
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.plist text eol=lf

# Package files
Package.swift text eol=lf
Package.resolved text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Xcode files
*.xcodeproj text eol=lf
*.xcworkspace text eol=lf
*.xcuserstate binary

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.dmg binary
*.ipa binary
*.app binary

# Scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# License files
LICENSE text eol=lf
COPYING text eol=lf
